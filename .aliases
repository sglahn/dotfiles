# Show description of HTTP Status Code
function httpc() { sed -n -e '/^'$1'/p' .lib/http_codes.csv | sed -e $'s/;/\\\n/g' | fold -w 81; }

# Open Browser and Google Search
function google() { q="$@"; $generic_open https://google.com/search?q="$q"; }
# Open Browser and Stack Overflow search
function stackover() { q="$@"; $generic_open https://stackoverflow.com/search?q="$q"; }
# Open Browser and Google Translate from German to English
function gtoe() { q="$@"; q=${q// /%20}; $generic_open https://translate.google.com/#de/en/"$q"; }
# Open Browser and Google Translate from English to German
function etog() { q="$@"; q=${q// /%20}; $generic_open https://translate.google.com/#en/de/"$q"; }

